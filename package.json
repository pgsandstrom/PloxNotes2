{
  "name": "plox-notes-2",
  "version": "1.0.0",
  "private": false,
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "format": "prettier --write \"{,!(.next|dist|node_modules)/**/}!(package-lock).{json,md,js,jsx,ts,tsx,css,scss}\"",
    "lint": "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix .",
    "pre-commit": "lint-staged",
    "pre-push": "npm run lint && npm run typecheck",
    "start": "cross-env NODE_ENV=production node dist/server/index.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@types/lodash": "4.14.169",
    "@types/node": "15.0.2",
    "@types/pg": "7.14.11",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.4",
    "@types/socket.io": "2.1.13",
    "@types/socket.io-client": "1.4.36",
    "@types/uuid": "8.3.0",
    "cross-env": "7.0.3",
    "lodash": "4.17.21",
    "next": "10.2.0",
    "pg": "8.6.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-flip-move": "3.0.4",
    "react-textarea-autosize": "8.3.2",
    "socket.io": "4.1.1",
    "socket.io-client": "4.1.1",
    "ts-node": "9.1.1",
    "typescript": "4.2.4",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.8",
    "lint-staged": "11.0.0",
    "nodemon": "2.0.7",
    "prettier": "2.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit",
      "pre-push": "npm run pre-push"
    }
  },
  "lint-staged": {
    "*.{json,md,css,scss}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "node ./node_modules/eslint/bin/eslint.js --ext .ts --ext .tsx --fix",
      "prettier --write"
    ]
  }
}
